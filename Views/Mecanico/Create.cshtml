@model estudo.Models.Mecanico

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadastrar Mecânico</title>
</head>
<body>
<br />
<h4>Cadastro de Mecânico</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Razão Social</label>
                <input asp-for="RazaoSocial" class="form-control" required />
                <span asp-validation-for="RazaoSocial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">CNPJ</label>
                <input asp-for="CNPJ" class="form-control" data-mask="00.000.000/0000-00" />
                <span asp-validation-for="CNPJ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Responsável</label>
                <input asp-for="Responsavel" class="form-control" />
                <span asp-validation-for="Responsavel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPF" class="control-label"></label>
                <input asp-for="CPF" class="form-control" data-mask="000.000.000-00"/>
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label class="control-label">Telefone</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <input asp-for="DDDTelefone" class="form-control" placeholder="ex (11)" data-mask="(00)"/>
                        <input asp-for="Telefone" class="form-control" placeholder="ex 2253-0324" data-mask="0000-0000"/>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label">Celular</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                         <input asp-for="DDDCelular" class="form-control" placeholder="ex (11)" data-mask="(00)" />
                        <input asp-for="Celular" class="form-control" placeholder="96905-5218" data-mask="00000-0000" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label">Endereço</label>
                <input asp-for="Endereco" class="form-control" required />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
              <div class="form-group">
                <label class="control-label">Número</label>
                <input asp-for="Numero" class="form-control" required />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">CEP</label>
                <input asp-for="CEP" class="form-control" data-mask="00000-000" required/>
                <span asp-validation-for="CEP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" value="São Paulo" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" value="SP"/>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Latitude" class="control-label"></label>
                <input asp-for="Latitude" class="form-control" placeholder="-23.563699" required />
                <span asp-validation-for="Latitude" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <label asp-for="Longitude" class="control-label"></label>
                <input asp-for="Longitude" class="form-control" placeholder="-46.510837" required/>
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar"  class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para listagem</a>
</div>

</body>
</html>
